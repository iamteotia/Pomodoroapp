<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using Material Design 3 -->
    <style name="Base.Theme.PomodoroTimer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize other theme attributes as needed -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Application theme -->
    <style name="Theme.PomodoroTimer" parent="Base.Theme.PomodoroTimer" />
</resources>